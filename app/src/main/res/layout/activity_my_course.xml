<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyCourse">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="@color/purple_700">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="right|end"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Course"
                android:fontFamily="@font/poppins_medium"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ref"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_book"
                            android:layout_width="100dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="60dp"
                            android:src="@drawable/book_img" />
                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/iv_book"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvCourseName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid Course"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/ll"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/purple_700"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_book1"
                            android:layout_width="100dp"
                            android:layout_height="140dp"
                            android:layout_marginRight="60dp"
                            android:src="@drawable/book_img" />
                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/iv_book1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Course"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paid_course"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/ll1"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/purple_700"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_book2"
                            android:layout_width="100dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="60dp"
                            android:src="@drawable/book_img" />
                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/iv_book2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_course"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_course"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_course"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid Course"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/ll2"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/purple_700"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible"
            android:overScrollMode="never"
            android:id="@+id/rv_course"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_found"
            android:fontFamily="@font/poppins_regular"
            android:visibility="gone"
            android:layout_centerInParent="true"/>





    </RelativeLayout>


</LinearLayout>